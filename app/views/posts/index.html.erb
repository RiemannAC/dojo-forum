<div class="container">
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Replies count</th>
          <th>Title</th>
          <th>Last replied at</th>
          <th>Viewed count</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr data-link="<%= post_path(post) %>">
            <td><%= post.comments_count %></td>
            <th><%= post.title %></th>
            <td><%# post.comments.last.created_at.strftime("%Y-%m-%d") if post.comments.present?  %></td>
            <td><%= post.viewed_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="text-center">
      <%= paginate @posts %>
    </div>>
  </div>
</div>
