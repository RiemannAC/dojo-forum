<div class="container">
  <h3>Edit Comment</h3>
  <div>
    <%= form_for [@post, @comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :content, placeholder: "Edit Comment!", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>