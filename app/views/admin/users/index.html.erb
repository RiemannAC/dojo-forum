<div class="container">
  <div class="row">
    <!-- partial -->
    <div class="navtab">

      <ul class="nav nav-tabs">
        <li role="presentation">
          <%= link_to "Category List", admin_categories_path %>
        </li>
        <li role="presentation" class="active">
          <%= link_to "User List", admin_users_path %>
        </li>
      </ul>

    </div>
    <!-- partial -->
  <br />
  </div>
  <div class="row">
    <table class="table table-hover table-bordered">
      <thead class="table_title">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td data-link="<%= user_path(user) %>"><div class="admin_name"><%= user.name %></div></td>
            <td data-link="<%= user_path(user) %>"><%= user.email %></td>
            <td>
              <%= form_tag admin_user_path(user), method: :patch, class: "form-inline" do %>
                <%= select_tag :role, options_for_select([["Admin", "admin"], ["Normal", "normal"], params[:role]]), class: "form-control" %>
                <%= submit_tag "Update", class: "btn btn-primary" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $("td[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>