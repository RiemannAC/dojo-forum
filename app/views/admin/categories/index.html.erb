<div class="container">
  <div class="row">
    <!-- partial -->
    <div class="navtab">

      <ul class="nav nav-tabs">
        <li role="presentation" class="active">
          <%= link_to "Category List", admin_categories_path %>
        </li>
        <li role="presentation">
          <%= link_to "User List", admin_users_path %>
        </li>
      </ul>

    </div>
    <!-- partial -->
  <br />
  </div>
  <div class="row">
    <%= form_for [:admin, @category], html: { class: "form-inline mb-3" } do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
      <% if @category.errors.any? %>
        <%= @category.errors.full_messages.to_sentence %>
      <% end %>
    <% end %>
    <br />
    <table class="table table-hover table-bordered">
      <thead class="table_title">
        <tr>
          <th>Name</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <div class="title_button">
                <%= link_to "Edit", admin_categories_path(id: category.id), class: "btn btn-primary" %>
                <%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: "Are you sure??" }, class: "btn btn-default" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>