<div class="container-fluid">
  <div class="row">
    <div class="count_bar col-md-12">
      <div class="col-md-4">
        <h2 class="index_msg">User</h2>
        <h3 class="feeds_count"><%= @user_count %></h3>
      </div>
      <div class="col-md-4">
        <h2 class="index_msg">Post</h2>
        <h3 class="feeds_count"><%= @post_count %></h3>
      </div>
      <div class="col-md-4">
        <h2 class="index_msg">Comment</h2>
        <h3 class="feeds_count"><%= @comment_count %></h3>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="col-md-6 text-center">
        <div class="box">
          <h2 class="bottom_line">Chatterbox</h2>
        </div>
        <table class="table table-hover">
          <tbody>
            <% @users.each_with_index do |user, index| %>
              <tr data-link="<%= user_path(user) %>">
                <td><%= index+1 %>.</td>
                <td><%= user.name %></td>
                <td><%= user.comments_count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-md-6 text-center">
        <div class="box">
          <h2 class="bottom_line">Most Popular Post</h2>
        </div>
        <table class="table table-hover">
          <tbody>
            <% @posts.each_with_index do |post, index| %>
              <tr data-link="<%= post_path(post) %>">
                <td><%= index+1 %>.</td>
                <td><%= post.title %></td>
                <td><%= post.updated_at.strftime("%Y-%m-%d") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>