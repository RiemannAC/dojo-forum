<%= render partial: "shared/user_info", locals: { user: @user } %>
<%= render partial: "shared/navtab", locals: { user: @user } %>

<div class="container">
  <div class="row">
    <% @comments.each do |comment| %>
      <div class="col-md-12">
        <div class="post col-md-10" data-link="<%= post_path(comment.post) %>">
          <div class="post_top post_title"><%= comment.post.title %></div>
          <div class="comment content"><%= comment.content %></div>
        </div>
        <div class="col-md-2">
          <!-- edit button -->
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  $("div[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>