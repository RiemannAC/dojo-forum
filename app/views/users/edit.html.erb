<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.text_field :name, placeholder: "Name", class: "form-control bg-light" %>
        </div>
        <div class="form-group">
          <%= f.text_area :intro, placeholder: "Introduction！", class: "form-control bg-light", rows: "8" %>
        </div>
        <div class="form-group">
          <%= image_tag @user.avatar, width: "140px" if @user.avatar? %>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>