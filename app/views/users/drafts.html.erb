<%= render partial: "shared/user_info", locals: { user: @user } %>
<%= render partial: "shared/navtab", locals: { user: @user } %>

<div class="container">
  <div class="row">
    <table class="table table-hover">
      <tbody>
        <% @drafts.each do |post| %>
          <tr>
            <td class="post_title"><%= post.title %></td>
            <td class="post_title">Draft</td>
            <td class="post_title"><%= post.updated_at.strftime("%Y-%m-%d") %></td>
            <td><!-- edit button -->
              <% if post.user == current_user || current_user.admin? %>
                <div class="buttons">
                  <%= link_to edit_post_path(post) do %>
                    <i class="fa fa-edit fa-2x"></i>
                  <% end %>
                  <%= link_to post_path(post), method: :delete, data: { confirm: "Are you sureï¼Ÿ" } do %>
                    <i class="fa fa-trash fa-2x"></i>
                  <% end %>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>