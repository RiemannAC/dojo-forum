<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :intro, "Introduction" %>
      <%= f.text_area :intro, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :avatar, "Avatar :" %>
      <label class="btn btn-default upload_button">
        File
        <spna style="display: none"><%= f.file_field :avatar %></spna>
      </label>
    </div>

    <div class="form-group" >
      <%# 只會給預設值待修 %>
      <%# f.label :role, "Privilege" %>
      <%# f.label :role, "admin" %>
      <%# radio_button_tag(:role, "admin") %>
      <%# f.label :role, "norman" %>
      <%# radio_button_tag(:role, "normal") %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>( 至少 <%= @minimum_password_length %> 位數密碼 )</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="devise_button">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
    <div class="devise_button btn btn-default">
      <%= link_to "Log in", new_session_path(resource_name) %><!-- 用 partial 按鈕右側會被吃掉原因不明 -->
    </div>
  <% end %>
</div>

